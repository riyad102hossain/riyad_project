<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management</title>

    <!-- Bootstrap and Font Awesome CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Employ_wafi_solution.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <style>
        /* Flexbox layout for the entire page */
        .flex-container {
            display: flex;
            height: 100vh; /* Full viewport height */
        }

        /* Left sidebar styling */
        .sidebar {
            background-color: #34495e;
            width: 150px;
            padding: 5px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

            .sidebar a {
                display: block;
                margin-bottom: 20px;
                font-size: 0.8em;
                text-decoration: none;
                color: white;
            }

                .sidebar a i {
                    margin-right: 5px;
                }

                /* Hover effect for links */
                .sidebar a:hover {
                    color: #007bff;
                }

        /* Right content area styling */
        .content-area {
            flex-grow: 1;
            padding: 20px;
            background-color: #fff;
        }
    </style>
</head>
<body>
    <div class="flex-container">
        <!-- Left Sidebar -->
        <div class="sidebar">
            <!-- Home Link with Icon -->
            <a class="nav-link " asp-area="" asp-page="/Index">
                <i class="fas fa-home"></i> Home
            </a>

            <!-- Employees Section with Icon -->
            <a class="nav-link " asp-area="" asp-page="/Admin/Employee/Index">
                <i class="fas fa-users"></i> Employees
            </a>

            <!-- Add Employee Link with Icon -->
            <a class="nav-link " asp-area="" asp-page="/Admin/Employee/Create">
                <i class="fas fa-user-plus"></i> Add Employee
            </a>
        </div>

        <!-- Right Content Area -->
        <div class="content-area">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
